{
  "compilerOptions": {
    "target": "ES2020",                   // Set a compatible target
    "module": "CommonJS",                 // TypeORM uses CommonJS modules
    "strict": true,                       // Optional but recommended
    "esModuleInterop": true,              // Required for TypeORM imports
    "skipLibCheck": true,                 // Speeds up TypeScript checks
    "experimentalDecorators": true,       // Enable decorator support
    "emitDecoratorMetadata": true,        // Required for TypeORM metadata
    "outDir": "./dist"                    // Output directory for compiled files
  },
  "include": ["src/**/*", "tsconfig.json"],                // Include all TypeScript files in 'src'
  "exclude": ["node_modules", "dist"]     // Exclude irrelevant folders
}
